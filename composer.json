{
    "name": "toastnz/mercury",
    "type": "silverstripe-project",
    "description": "Toast NZ SilverStripe Installer",
    "require": {
        "php": ">=8.1",
        "silverstripe/recipe-cms": "5.1.0@stable",
        "undefinedoffset/silverstripe-nocaptcha": "^2.4",
        "symbiote/silverstripe-gridfieldextensions": "^4.0",
        "silverstripe/googlesitemaps": "^3.0",
        "silverstripe/taxonomy": "^3.1",
        "drewm/mailchimp-api": "^2.5",
        "symbiote/silverstripe-queuedjobs": "^5.0",
        "silverstripe/crontask": "^3.0",
        "silverstripe/userforms": "^6.1",
        "silverstripe/tagfield": "^3.1",
        "undefinedoffset/sortablegridfield": "^2.2",
        "silverstripe/blog": "^4.1",
        "axllent/silverstripe-form-fields": "^1.6",
        "jonom/focuspoint": "^5.0",
        "silverstripe/redirectedurls": "^3.0",
        "bummzack/sortablefile": "2.x-dev",
        "heyday/silverstripe-menumanager": "dev-main",
        "plasticstudio/iconfield": "dev-master",
        "unclecheese/silverstripe-image-optionset": "dev-master",
        "unclecheese/display-logic": "^3.0",
        "toastnz/duplicator": "^2.0",
        "toastnz/favicon": "^2.0",
        "stevie-mayhew/silverstripe-svg": "dev-master",
        "permanentinc/found": "^2.0",
        "permanentinc/type": "^2.0",
        "dnadesign/silverstripe-elemental": "^5.1",
        "symfony/sendgrid-mailer": "^6.3",
        "symfony/http-client": "^6.3",
        "toastnz/linkable": "^3.0"
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/toastnz/silverstripe-svg"
        },
        {
            "type": "git",
            "url": "https://github.com/toastnz/sortablefile"
        },
        {
            "type": "git",
            "url": "https://github.com/toastnz/silverstripe-menumanager"
        },
        {
            "type": "git",
            "url": "https://github.com/toastnz/plasticstudio-iconfield"
        },
        {
            "type": "git",
            "url": "https://github.com/toastnz/silverstripe-image-optionset"
        }        
    ],    
    "extra": {
        "resources-dir": "_resources",
        "project-files-installed": [
            "app/.htaccess",
            "app/_config.php",
            "app/_config/mimevalidator.yml",
            "app/_config/mysite.yml",
            "app/src/Page.php",
            "app/src/PageController.php"
        ],
        "public-files-installed": [
            ".htaccess",
            "index.php",
            "web.config"
        ],
        "expose": [
            "themes/mercury/dist"
        ]        
    },
    "config": {
        "process-timeout": 600,
        "allow-plugins": {
            "composer/installers": true,
            "silverstripe/vendor-plugin": true,
            "silverstripe/recipe-plugin": true
        }
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
